{
  "version": 3,
  "name": "css-and-travel",
  "output_encoding": "no-op",
  "timeout": "5000ms",
  "cache_ttl": "300s",
  "port": 8080,
  "plugin": {
    "pattern": ".so",
    "folder": "/etc/krakend/plugins/"
  },
  "endpoints": [
    {
      "endpoint": "/css-and-travel/css/cores",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": [
        "X-User-Email"
      ],
      "extra_config": {
        "security/cors": {
          "allow_origins": [
            "*"
          ],
          "allow_methods": [
            "GET"
          ],
          "expose_headers": [
            "*"
          ],
          "allow_headers": [
            "*"
          ],
          "max_age": "12h",
          "allow_credentials": false
        },
        "proxy": {
          "sequential": true
        },
        "validation/cel": [
          {
            "check_expr": "size(req_headers[\"X-User-Email\"]) == 1",
            "error_message": "Missing required header: X-User-Email"
          }
        ],
        "error": {
          "return_status_code": 400,
          "return_body": true
        }
      },
      "backend": [
        {
          "url_pattern": "/csscolornames/colors",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.sampleapis.com"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "plugin/http-client": {
              "name": "qap-krakend-plugin",
              "gateway_name": "css-and-travel",
              "endpoint": "/css-and-travel/css/cores"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/css-and-travel//travelexplore-api/accommodations",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": [
        "X-User-Email"
      ],
      "extra_config": {
        "security/cors": {
          "allow_origins": [
            "*"
          ],
          "allow_methods": [
            "GET",
            "HEAD",
            "POST"
          ],
          "expose_headers": [
            "Content-Length",
            "Content-Type"
          ],
          "allow_headers": [
            "Accept-Language"
          ],
          "max_age": "12h",
          "allow_credentials": false
        },
        "proxy": {
          "sequential": true
        },
        "validation/cel": [
          {
            "check_expr": "size(req_headers[\"X-User-Email\"]) == 1",
            "error_message": "Missing required header: X-User-Email"
          }
        ],
        "error": {
          "return_status_code": 400,
          "return_body": true
        }
      },
      "backend": [
        {
          "url_pattern": "/v1/accommodations",
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.travelexplore.com"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "plugin/http-client": {
              "name": "qap-krakend-plugin",
              "gateway_name": "css-and-travel",
              "endpoint": "/css-and-travel//travelexplore-api/accommodations"
            }
          }
        }
      ]
    }
  ]
}