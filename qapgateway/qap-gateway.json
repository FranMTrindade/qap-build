{
  "version": 3,
  "name": "KrakenD - API Gateway",
  "apiKey": "css",
  "output_encoding": "no-op",
  "timeout": "5000ms",
  "cache_ttl": "300s",
  "port": 8080,
  "plugin": {
    "pattern": ".so",
    "folder": "/etc/krakend/plugins/"
  },
  "endpoints": [
    {
      "endpoint": "/cores",
      "method": "GET",
      "output_encoding": "no-op",
      "input_headers": [
        "X-User-Email"
      ],
      "extra_config": {
        "security/cors": {
          "allow_origins": [
            "*"
          ],
          "allow_methods": [
            "GET"
          ],
          "expose_headers": [
            "*"
          ],
          "allow_headers": [
            "*"
          ],
          "max_age": "12h",
          "allow_credentials": false
        },
        "proxy": {
          "sequential": true
        },
        "validation/cel": [
          {
            "check_expr": "size(req_headers[\"X-User-Email\"]) == 1",
            "error_message": "Missing required header: X-User-Email"
          }
        ],
        "error": {
          "return_status_code": 400,
          "return_body": true
        }
      },
      "backend": [
        {
          "url_pattern": "csscolornames/colors",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.sampleapis.com/"
          ],
          "disable_host_sanitize": false,
          "extra_config": {
            "plugin/http-client": {
              "name": "qap-krakend-plugin"
            },
            "backend/static_headers": {
              "X-Endpoint-Called": "/cores",
              "X-Api-Key": "css"
            }
          },
          "headers_to_pass": [
            "X-Endpoint-Called",
            "X-Api-Key"
          ]
        }
      ]
    }
  ]
}